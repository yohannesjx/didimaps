maps.didi.et {
    # API Gateway
    handle /api/* {
        reverse_proxy api:8000
    }

    handle /auth/* {
        reverse_proxy api:8000
    }

    handle /health {
        reverse_proxy api:8000
    }

    # Tile server
    handle /tiles/* {
        uri strip_prefix /tiles
        rewrite * /services/addis/tiles{uri}
        reverse_proxy tileserver:8000
    }

    # Building tiles from PostGIS
    handle /buildings-tiles/* {
        uri strip_prefix /buildings-tiles
        reverse_proxy pg_tileserv:7800
    }

    # Frontend (SPA)
    handle {
        reverse_proxy frontend:80
    }

    # Enable compression
    encode gzip

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }

    # Logging
    log {
        output stdout
        format console
    }
}

# Redirect www to non-www
www.maps.didi.et {
    redir https://maps.didi.et{uri} permanent
}
